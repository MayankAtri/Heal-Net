# Server Configuration
PORT=5001
NODE_ENV=development

# MongoDB Configuration
# For development, use local MongoDB:
# MONGODB_URI=mongodb://localhost:27017/healnet
# For production, use MongoDB Atlas:
MONGODB_URI=your_mongodb_atlas_connection_string

# Google Gemini AI Configuration
# Get your API key from https://ai.google.dev/
GEMINI_API_KEY=your_gemini_api_key
GEMINI_MODEL=gemini-2.5-flash-lite

# File Upload Configuration
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/jpg,image/png,application/pdf
MAX_REPORT_FILE_SIZE=10485760
DEFAULT_ANALYSIS_DEPTH=simple

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# JWT Configuration
# IMPORTANT: Generate strong random secrets for production!
# Use: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-jwt-key-change-this-in-production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Google OAuth 2.0 Configuration
# Get your credentials from https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:5001/api/auth/google/callback

# Frontend URL (for OAuth redirects and CORS)
# Development: http://localhost:5173
# Production: https://your-frontend.vercel.app
FRONTEND_URL=http://localhost:5173
